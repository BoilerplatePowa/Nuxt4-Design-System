# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx,mjs}]
indent_style = space
indent_size = 4
tab_width = 4

# Vue files
[*.vue]
indent_style = space
indent_size = 4
tab_width = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false