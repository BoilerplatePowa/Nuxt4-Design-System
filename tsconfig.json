{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/runtime/*"],
      "@/*": ["./src/runtime/*"]
    },
    "types": ["node", "vite/client"]
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "playground",
    ".nuxt",
    ".output",
    "storybook-static",
    "stories",
    "test"
  ]
}
